{
  "include": ["./src/components", "./src/custom.d.ts", "./src/setupTests.js"],

  "compilerOptions": {
    "types": ["@testing-library/jest-dom"],
    "baseUrl": "./",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "crypto": ["node_modules/crypto-js"]
    }
  }
}
